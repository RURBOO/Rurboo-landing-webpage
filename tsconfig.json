{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,

    "module": "ESNext",
    "moduleResolution": "bundler",

    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "types": ["node"]
  },
  "include": ["src", "vite.config.ts"]
}
